@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <form class="form" asp-controller="Home" asp-action="updateUser" enctype="multipart/form-data">
        <div class="text-center">
            <h4>Edit users</h4>
            <hr>
        </div>
        @foreach (var item in @ViewBag.UserList)
        {
            <input hidden="hidden" name="idUser" value="@item._id">
            <div class="col-lg-4 col-md-12 col-sm-12">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control form-control-sm mb-2" name="name" required value="@item.name" />
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control form-control-sm mb-2" name="email" required value="@item.email" />
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <label for="phone" class="form-label">Phone</label>
                <input type="text" class="form-control form-control-sm mb-2" name="phone" value="@item.phone" />
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control form-control-sm mb-2" name="address" required value="@item.address" />
            </div>
        }
        <br>
        <div class="form-group float-end">
            <div class="col-12">
                <button class="btn btn-white" type="reset">Clean</button>
                <button class="btn btn-success" type="submit">Save</button>
            </div>

        </div>
    </form>
</div>
